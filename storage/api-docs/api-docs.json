                                        "type": "string",
                                        "example": "Pedro"
                                    },
                                    "email": {
                                        "title": "Lead email",
                                        "description": "Lead email",
                                        "type": "string",
                                        "example": "pedro@ejemplo1.com"
                                    },
                                    "phone": {
                                        "title": " Lead phone",
                                        "description": "Lead phone",
                                        "type": "string",
                                        "example": "1233567"
                                    },
                                    "message": {
                                        "title": "Message for Lead",
                                        "description": "Message for Lead",
                                        "type": "string",
                                        "example": "Hello Pedro"
                                    },
                                    "step_id": {
                                        "title": "Step ID for Lead",
                                        "description": "Step ID for Lead",
                                        "type": "int",
                                        "example": 3
                                    }
                                },
                                "type": "object"
                            }
